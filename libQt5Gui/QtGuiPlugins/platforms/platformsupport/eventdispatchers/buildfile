import! [metadata] moc = Qt5Moc%exe{qt5moc}

include ../../../../QtGui/

libul{Qt5EventDispatcherSupport}: hxx{qwindowsguieventdispatcher_p}     \
                                  cxx{qwindowsguieventdispatcher}

# The "metadata library": its purpose is to make sure all the imported
# libraries are resolved for the ad hoc .mm rules below.
#
# Note: use a rule hint to resolve ambiguity between C and C++ library.
#
[rule_hint=cxx] libul{Qt5EventDispatcherSupportMeta}: \
  ../../../../QtGui/lib{Qt5Gui Qt5GuiPrivate}

# Rule to generate a header with C++ compiler's predefined macros. It is used
# to make them available to moc.
#
hxx{moc_predefs}: ../../../../mkspecs/features/data/cxx{dummy}
%
if ($cxx.id != 'msvc')
{{
  diag gen ($>[0])
  $cxx.path $cc.poptions $cxx.poptions $cc.coptions $cxx.coptions $cxx.mode \
            -o $path($>) -dM -E $path($<)
}}
else
{{
  diag gen ($>[0])
  cat <<EOI >$path($>)
  #define _WIN32
  #define WIN32
  EOI
}}

cxx{moc_qwindowsguieventdispatcher_p}: hxx{qwindowsguieventdispatcher_p}
libul{Qt5EventDispatcherSupport}: cxx{moc_qwindowsguieventdispatcher_p}

# -I options for the system header directories.
#
sys_incl = $regex.apply($cxx.sys_hdr_dirs, '(.+)', '-I\1')

# Rule to run moc on a header file.
#
# Use -f to override the path moc uses to #include the input file, which is
# relative to the output directory, with just the name of the input file.
#
# Note that we depend on libul{Qt5EventDispatcherSupportMeta} in order to
# ensure all the imported libraries are resolved for these ad hoc rules.
#
# Also add QtGui's exported header search directories (via
# libul{Qt5EventDispatcherSupportMeta}) otherwise certain definitions required
# by moc will be missing.
#
# Note that hxx{moc_predefs} must always be in position 1.
#
cxx{~'/moc_(.*)/'}: hxx{~'/\1/'} hxx{moc_predefs}               \
                    libul{Qt5EventDispatcherSupportMeta}        \
                    $moc
{{
  o = $path($>[0])
  t = $(o).t

  dep_incl = $cxx.lib_poptions(libul{Qt5EventDispatcherSupportMeta})

  depdb hash $dep_incl

  # Note: exclude libul{Qt5EventDispatcherSupportMeta} from update during
  #       match not to mess up its for-install'ness.
  #
  depdb dyndep                                                  \
    --byproduct --drop-cycles --what=header --default-type=h    \
    --update-exclude libul{Qt5EventDispatcherSupportMeta}       \
    --file $t

  diag moc ($<[0])

  s = $path($<[0])

  $moc --include $path($<[1]) $cc.poptions $cxx.poptions $dep_incl $sys_incl \
    -f $leaf($s) --output-dep-file --dep-file-path $t -o $o $s
}}

libul{Qt5EventDispatcherSupport}: libul{Qt5EventDispatcherSupportMeta}

cxx.poptions =+ "-I$out_base" "-I$src_base"

cxx.poptions += $platforms_poptions			\
                -DQT_BUILD_EVENTDISPATCHER_SUPPORT_LIB  \
                -DQT_NO_CAST_FROM_ASCII

